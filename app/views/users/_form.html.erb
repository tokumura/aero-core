<%= link_to(users_path, :class=>"btn btn-primary btn-large") do %>
  <i class="icon-circle-arrow-left icon-white"></i> 一覧に戻る
<% end %>

<br/>
<br/>

<div class="row">
  <div class="span7">
    <%= form_for(@user, :html => {:class => 'form-horizontal well'}) do |f| %>

      <fieldset>
        <div class="control-group">
          <legend>ユーザー情報を入力してください。</legend>
          <label class="control-label" for="input01">ユーザーID</label>
          <div class="controls">
            <%= f.text_field :username, {:class=>"input-xlarge"} %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="input01">パスワード</label>
          <div class="controls">
            <%= f.password_field :password, {:class=>"input-xlarge"} %>
          </div>
        </div>

        <div class="control-group">
          <label class="control-label" for="optionsCheckbox">部署</label>
          <div class="controls">
          <% @departments.each do |department| %>
            <% @checked = false %>
            <% if @user.department %>
              <% if department.id.to_s == @user.department.id.to_s %>
                <% @checked = true %>
              <% end %>
            <% end %>
            <label class="radio">
              <%=radio_button_tag :department_id, department.id, @checked %><%=department.name%>　
            </label>
          <% end %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.submit '　登　録　', {:class=>"btn btn-primary"} %>
        </div>

      </fieldset>
    <% end %>
  </div>
</div>
