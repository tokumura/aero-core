<br/>
<div class="container">
  <h1>商品詳細</h1>
  <br/>

  <div class="row">
    <div class="span12">
      <h3>商品名</h3><br/>
      <p class="lead">　<%= @product.name %></p>
      <h3>価格</h3><br/>
      <p class="lead">　<%= @product.price %> 円</p>
      <h3>分類</h3><br/>
      <p class="lead">　<%= @product.classify %></p>
      <h3>コメント</h3><br/>
      <p class="lead">　<%= @product.comment %></p>
      <h3>部署</h3><br/>
      <p class="lead">　<%=@department_name%></p>
      <h3>カテゴリ</h3><br/>
      <p class="lead">　<%=@category_name%></p>
    </div>
  </div>

  <% if current_user.try(:admin?) %>
    <%= link_to '編集', edit_product_path(@product) %> |
    <%= link_to '削除', @product, :method => :delete %> |
  <% else %>
  <% end %>
  <%= link_to 'Back', products_path %>
</div>

