<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div><br/>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div><br/>

  <div class="field">
    <label>部署</label>
  <% @departments.each do |department| %>
    <% @product.departments.each do |d| %>
      <% @checked = false %>
      <% if department.id == d.department_id %>
        <% @checked = true %>
        <% break %>
      <% end %>
    <% end %>
    <%= check_box_tag("department_param[]", department.id, @checked) %><%= department.name%>　
  <% end %>
  </div><br/>

  <div class="field">
    <label>カテゴリ</label>
  <% @categories.each do |category| %>
    <% @product.categories.each do |c| %>
      <% @checked = false %>
      <% if category.id == c.category_id %>
        <% @checked = true %>
        <% break %>
      <% end %>
    <% end %>
    <%=radio_button_tag :category_param, category.id, @checked %><%=category.name%>　
  <% end %>
  </div><br/>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
